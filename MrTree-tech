  <!-- Proton Web SDK -->
  <script src="https://cdn.jsdelivr.net/npm/@proton/web-sdk@latest/dist/proton-web-sdk.min.js"></script>
  
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f9fc;
      color: #333;
      margin: 0;
      padding: 2rem;
    }
    h1 {
      color: #2b70f9;
    }
    #status {
      margin-top: 1rem;
      font-weight: bold;
    }
    #userInfo {
      margin-top: 1rem;
      background: #eaf3ff;
      padding: 1rem;
      border-radius: 6px;
    }
    form {
      margin-top: 1rem;
      display: none;
    }
    input, button {
      padding: 0.5rem;
      margin: 0.25rem 0;
      width: 100%;
      font-size: 1rem;
    }
    button {
      background: #2b70f9;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }
    button:hover {
      background: #1f55c2;
    }
  </style>
